    "axios": "^0.25.0",
    "date-fns": "^2.28.0",
    "framer-motion": "^5.6.0",
    "graphql": "^16.3.0",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "magic-sdk": "^8.0.1",
    "next": "12.0.9",
    "nextjs-progressbar": "^0.0.13",
    "nookies": "^2.5.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "urql": "^2.1.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "17.0.13",
    "@types/react": "17.0.38",
    "eslint": "^7.12.1",
    "eslint-config-next": "^12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.0.7",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "typescript": "4.5.5"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "standard",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier",
      "only-warn"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-use-before-define": "off",
      "no-undef": "off",
      "no-console": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "allowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
